@model ProductViewModel


@{
    ViewData["Title"] = "Login";
    ViewData["Message"] = Model.prodDescription;

}



<form asp-action="Index" autocomplete="off">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <div class="mb-3">
                <label class="control-label">Description</label>
                <input asp-for="prodDescription" class="form-control" />
                <span asp-validation-for="prodDescription" class="text-danger"></span>
                @* <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div> *@
            </div>

            <div class="mb-3">
                <label class="control-label text-danger">@ViewData["Message"]</label>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="col-3"></div>
    </div>

</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
